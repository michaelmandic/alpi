---
import Logo from "../assets/alpilogo.svg";
---

<header
  id="header"
  class="w-full flex transition-all items-center h-20 justify-center border-b-2 fixed top-0 left-0 z-[9999]"
>
  <div
    class="flex justify-between items-center w-full relative px-6 md:px-12 lg:px-24"
  >
    <a href="/kontakt">KONTAKT</a>
    <a
      href="/"
      class="absolute left-1/2 transform -translate-x-1/2 group"
      aria-label="Alpi"
    >
      <Logo class="logo group-hover:opacity-50 transition-all" />
    </a>
    <a href="/meni">MENI</a>
  </div>
</header>

<style>
  a {
    font-size: 1.125rem;
    font-weight: 500;

    &:hover {
      opacity: 50%;
    }
  }

  .scrolled a {
    &:hover {
      color: var(--color-blue-main);
    }
  }

  header {
    margin-top: 1rem;
    height: 8rem;
    background-color: transparent;
    color: white;
    border-color: hsla(0, 0%, 100%, 10%);
  }

  header.scrolled {
    margin-top: 0;
    height: 5rem;
    background-color: white;
    color: black;
    border-color: var(--color-blue-light);
  }

  .logo {
    height: 6rem;
  }

  .scrolled .logo {
    height: 4rem;
  }
</style>

<script is:inline>
  function handleScroll() {
    const header = document.getElementById("header");
    window.addEventListener("scroll", () => {
      header?.classList.toggle("scrolled", window.scrollY > 50);
    });
  }

  document.addEventListener("astro:after-swap", handleScroll);
  handleScroll();
</script>
